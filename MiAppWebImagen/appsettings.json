{
  "Logging": { // Sección para la configuración de registro de logs
    "LogLevel": { // Define los niveles de log
      "Default": "Information", // Nivel de log predeterminado: Información
      "Microsoft.AspNetCore": "Warning" // Nivel de log para ASP.NET Core: Advertencia
    }
  },
  "ConnectionStrings": { // Sección para las cadenas de conexión a la base de datos
    "Conn": "Data Source=ADONAY;Initial Catalog=master;Integrated Security=True; TrustServerCertificate=True" // Cadena de conexión llamada "Conn" para conectarse a la base de datos
  },
  "AllowedHosts": "*" // Permite que cualquier host realice solicitudes a la aplicación
}
